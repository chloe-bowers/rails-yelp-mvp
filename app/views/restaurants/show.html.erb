<div class=container>
  <h2><%= @restaurant.name %></h2>
  <p style="color: green"><%= notice %></p>

  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.category %></p>
  <p><%= @restaurant.phone_number %></p>

  <% @restaurant.reviews.each do |review| %>
  <p><%= review.content %> - <%= review.created_at %>
  <%= link_to "delete review", review_path(review),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}  %></p>
<% end %>


  <div>
    <%= link_to "Back to restaurants", restaurants_path %>
    <%= link_to "Leave a review", new_restaurant_review_path(@restaurant)  %>

    <%= button_to "Destroy this restaurant", @restaurant, method: :delete %>
  </div>

</div>
